FROM node:16-alpine

RUN apk add --no-cache git python2 make g++

WORKDIR /home/node/cokodocs

COPY package.json .
COPY yarn.lock .

RUN chown -R node:node .
USER node


# RUN yarn cache clean
RUN yarn install
COPY --chown=node:node . .

ENTRYPOINT ["sh", "./scripts/setupProdServer.sh"]
CMD ["node", "./startServer.js"]
