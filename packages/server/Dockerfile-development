FROM node:16-bullseye

RUN apt-get update \
    && apt-get upgrade -y \
    && apt-get install -y ranger vim python netcat

WORKDIR /home/node/cokodocs

COPY package.json .
COPY yarn.lock .

RUN chown -R node:node .
USER node

RUN yarn cache clean
RUN yarn install
# RUN yarn cache clean
COPY --chown=node:node . .
